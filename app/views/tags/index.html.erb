<h1>All Tags</h1>


<table>
  <tr>
    <th>Tag Name</th>
    <th colspan="1"></th>
  </tr>

  <% @tags.each do |tag| %>
        <tr>
        <td><%= link_to tag.name, tag_path(tag) %></td>
        <td><%= link_to 'Destroy', tag_path(tag),
            method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>
